---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
import GalleryGrid from '../components/GalleryGrid.astro';
import GalleryModal from '../components/GalleryModal.astro';
import ProgramCard from '../components/ProgramCard.astro';
import ArtFormsList from '../components/ArtFormsList.astro';
import AnimatedCounter from '../components/AnimatedCounter.astro';
import { artworks, artForms, programs, pageContent } from '../data/artAndCraftData';
import '../styles/global.css';
import { generateMetaTags, generatePageSchema, ORGANIZATION_SCHEMA } from '../data/seoConstants';

const seoData = generateMetaTags("artAndCraft");
const pageSchema = generatePageSchema("artAndCraft");
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{seoData.title}</title>
		<meta name="title" content={seoData.title} />
		<meta name="description" content={seoData.description} />
		<meta name="keywords" content={seoData.keywords} />
		<meta name="author" content="Koshish Family" />
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href={seoData.canonical} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={seoData.openGraph.type} />
		<meta property="og:url" content={seoData.openGraph.url} />
		<meta property="og:title" content={seoData.openGraph.title} />
		<meta property="og:description" content={seoData.openGraph.description} />
		<meta property="og:image" content={seoData.openGraph.image} />
		<meta property="og:site_name" content={seoData.openGraph.siteName} />
		<meta property="og:locale" content={seoData.openGraph.locale} />
		
		<!-- Twitter -->
		<meta name="twitter:card" content={seoData.twitter.card} />
		<meta name="twitter:url" content={seoData.openGraph.url} />
		<meta name="twitter:title" content={seoData.twitter.title} />
		<meta name="twitter:description" content={seoData.twitter.description} />
		<meta name="twitter:image" content={seoData.twitter.image} />
		<meta name="twitter:site" content={seoData.twitter.site} />
		<meta name="twitter:creator" content={seoData.twitter.creator} />
		
		<!-- Additional Meta Tags -->
		<meta name="theme-color" content="#0F52BA" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="default" />
		<meta name="format-detection" content="telephone=no" />
		
		<!-- External Resources -->
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
		
		<!-- Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify(ORGANIZATION_SCHEMA)} />
		<script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />
	</head>
	<body class="text-black font-inter">
		<!-- Skip to main content link for accessibility -->
		<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary text-white px-4 py-2 rounded z-50">Skip to main content</a>
		<Header />
		
		<main id="main-content">
			<!-- Hero Section -->
			<HeroSection 
				title={pageContent.hero.title}
				subtitle={pageContent.hero.subtitle}
				backgroundImage={pageContent.hero.backgroundImage}
				buttonText={pageContent.hero.buttonText}
				buttonOnClick="document.getElementById('gallery-section').scrollIntoView({ behavior: 'smooth' })"
			/>

			<div class="container mx-auto px-4">
				<!-- Creative Expression Section -->
				<section class="mb-16">
					<div class="grid md:grid-cols-2 gap-12 items-center">
						<div class="space-y-6">
							<h2 class="brush-underline text-3xl font-bold text-gray-800 font-jost">
								{pageContent.creativeExpression.heading}
							</h2>
							<p class="text-lg text-grey-600">
								{pageContent.creativeExpression.description}
							</p>
							<p class="text-sm text-grey-500 italic">
								{pageContent.creativeExpression.note}
							</p>
							<div class="bg-amber-50 p-6 rounded-xl shadow-md">
								<h3 class="text-xl font-bold mb-4 font-jost">
									{pageContent.creativeExpression.artFormsHeading}
								</h3>
								<ArtFormsList artForms={artForms} />
							</div>
						</div>
						<div class="creative-img">
							<img 
								src={pageContent.creativeExpression.illustration}
								alt="Creative Arts" 
								class="rounded-xl shadow-xl floating object-contain max-h-[500px] md:max-h-[700px] lg:max-h-[600px] w-auto mx-auto"
							/>
						</div>
					</div>
				</section>

				<!-- Gallery Section -->
				<section id="gallery-section" class="mb-16 scroll-mt-20">
					<h2 class="brush-underline text-4xl font-bold text-gray-800 mb-8 text-center font-jost">
						{pageContent.gallery.heading}
					</h2>
					<p class="font-bold text-gray-800 mb-6 text-center text-3xl">
						{pageContent.gallery.counterPrefix}
						<AnimatedCounter 
							targetCount={pageContent.gallery.targetCount}
							suffix="+"
							className="bg-gradient-to-r from-amber-500 via-orange-600 to-amber-500 bg-clip-text text-transparent"
						/>
						{pageContent.gallery.counterSuffix}
					</p>
					<GalleryGrid artworks={artworks} />
				</section>

				<!-- Join Community Section -->
				<section class="bg-amber-50 rounded-xl p-12 mb-16 relative overflow-hidden">
					<div class="pattern-bg absolute inset-0"></div>
					<div class="relative z-10">
						<h2 class="brush-underline text-4xl font-bold text-gray-800 mb-8 text-center font-jost">
							{pageContent.community.heading}
						</h2>
						<div class="grid md:grid-cols-4 gap-8">
							{programs.map((program) => (
								<ProgramCard 
									icon={program.icon}
									title={program.title}
									description={program.description}
								/>
							))}
						</div>
					</div>
				</section>

				<!-- CTA Section -->
				<section class="text-center mb-16 max-w-4xl mx-auto">
					<h2 class="brush-underline text-4xl font-bold text-gray-800 mb-6 font-jost">
						{pageContent.cta.heading}
					</h2>
					<p class="text-xl text-grey-600 mb-8">
						{pageContent.cta.description}
					</p>
					<a
						href={pageContent.cta.buttonLink}
						target="_blank"
						rel="noopener noreferrer"
						class="ripple-button inline-block text-white px-8 py-3 rounded-full font-semibold transition-all duration-300 bg-[#0F52BA] hover:bg-blue-700"
					>
						{pageContent.cta.buttonText}
					</a>
				</section>
			</div>
		</main>

		<GalleryModal />

		<Footer />
	</body>
</html>
