---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HeroSection from "../components/HeroSection.astro";
import Timeline from "../components/Timeline.astro";
import StatsGrid from "../components/StatsGrid.astro";
import {
	hero,
	mission,
	impactStats,
	timelineData,
	cta,
} from "../data/collectDistributionKureData";
import "../styles/global.css";
import { generateMetaTags, generatePageSchema, ORGANIZATION_SCHEMA } from "../data/seoConstants";

const seoData = generateMetaTags("collectDkure");
const pageSchema = generatePageSchema("collectDkure");
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{seoData.title}</title>
		<meta name="title" content={seoData.title} />
		<meta name="description" content={seoData.description} />
		<meta name="keywords" content={seoData.keywords} />
		<meta name="author" content="Koshish Family" />
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href={seoData.canonical} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={seoData.openGraph.type} />
		<meta property="og:url" content={seoData.openGraph.url} />
		<meta property="og:title" content={seoData.openGraph.title} />
		<meta property="og:description" content={seoData.openGraph.description} />
		<meta property="og:image" content={seoData.openGraph.image} />
		<meta property="og:site_name" content={seoData.openGraph.siteName} />
		<meta property="og:locale" content={seoData.openGraph.locale} />
		
		<!-- Twitter -->
		<meta name="twitter:card" content={seoData.twitter.card} />
		<meta name="twitter:url" content={seoData.openGraph.url} />
		<meta name="twitter:title" content={seoData.twitter.title} />
		<meta name="twitter:description" content={seoData.twitter.description} />
		<meta name="twitter:image" content={seoData.twitter.image} />
		<meta name="twitter:site" content={seoData.twitter.site} />
		<meta name="twitter:creator" content={seoData.twitter.creator} />
		
		<!-- Additional Meta Tags -->
		<meta name="theme-color" content="#0F52BA" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="default" />
		<meta name="format-detection" content="telephone=no" />
		
		<!-- External Resources -->
		<link
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
			rel="stylesheet"
		/>
		
		<!-- Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify(ORGANIZATION_SCHEMA)} />
		<script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />
	</head>
	<body class="text-black font-inter">
		<!-- Skip to main content link for accessibility -->
		<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary text-white px-4 py-2 rounded z-50">Skip to main content</a>
		<Header />

		<main id="main-content">
			<!-- Hero Section -->
			<HeroSection
				title={hero.title}
				subtitle={hero.subtitle}
				backgroundImage={hero.backgroundImage}
				buttonText={hero.buttonText}
				buttonLink={hero.buttonLink}
				titleColor="text-white"
			/>

			<div class="container mx-auto px-4">
				<!-- Mission Section -->
				<section class="space-y-8 mb-16">
					<div class="text-center md:text-left space-y-4">
						<h2
							class="brush-underline text-3xl font-bold text-gray-800 font-jost"
						>
							{mission.heading}
						</h2>
						<p class="text-grey-600 max-w-3xl mx-auto md:mx-0">
							{mission.description}
						</p>
					</div>

					<div class="grid md:grid-cols-2 gap-8 items-stretch">
						<div
							class="bg-blue-50 py-16 p-4 rounded-xl shadow-md h-full flex flex-col justify-between"
						>
							<h2 class="text-3xl font-bold mb-1 font-jost">
								{mission.collectHeading}
							</h2>
							<ul
								class="grid grid-cols-2 gap-4 text-grey-600 content-center mb-5"
							>
								{
									mission.collectItems.map((item) => (
										<li class="flex items-center">
											<i class="fas fa-book mr-3 text-primary" />{" "}
											{item}
										</li>
									))
								}
							</ul>
						</div>
						<div class="grid grid-cols-2 gap-6 h-full">
							{
								mission.images.map((img, index) => (
									<img
										src={img}
										alt={`Distribution ${index + 1}`}
										class="rounded-xl shadow-xl img-hover object-cover w-full h-full"
									/>
								))
							}
						</div>
					</div>
				</section>

				<!-- Impact Counters -->
				<section class="mb-16">
					<h2
						class="brush-underline text-3xl font-bold text-gray-800 mb-8 text-center font-jost"
					>
						Our Impact
					</h2>
					<StatsGrid stats={impactStats} bgColor="bg-blue-50 py-16" />
				</section>

				<!-- Timeline -->
				<section class="bg-blue-50 py-16 rounded-xl mb-16">
					<div class="max-w-7xl mx-auto px-6">
						<h2
							class="text-4xl font-bold text-center mb-16 text-primary font-jost"
						>
							Our Impact Journey
						</h2>
						<Timeline items={timelineData} />
					</div>
				</section>

				<!-- CTA Section -->
				<section class="bg-blue-50 py-16 rounded-xl text-center mb-16">
					<h2
						class="brush-underline text-4xl font-bold text-gray-800 mb-6 font-jost"
					>
						{cta.heading}
					</h2>
					<p class="text-xl text-grey-600 mb-8 max-w-3xl mx-auto">
						{cta.description}
					</p>
					<a
						href={cta.buttonLink}
						target="_blank"
						rel="noopener noreferrer"
						class="ripple-button inline-block text-white px-8 py-3 rounded-full font-semibold transition-all duration-300 bg-[#0F52BA] hover:bg-blue-700"
					>
						{cta.buttonText}
					</a>
				</section>
			</div>
		</main>

		<Footer />
	</body>
</html>
