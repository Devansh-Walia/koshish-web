---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.svelte';
import '../styles/global.css';
import { details, ExternalLinks } from '../data/constants';

const title = "Contact Us - Koshish";
const description = "Get in touch with Koshish. We'd love to hear from you.";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-[#0a0a0a] text-white font-inter selection:bg-primary/30">
    <Header />
    
    <main class="min-h-screen pt-24 pb-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10">
        <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-primary/20 rounded-full blur-[120px] animate-blob"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-purple-500/20 rounded-full blur-[120px] animate-blob animation-delay-2000"></div>
      </div>

      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
            Let's Start a <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-purple-400">Conversation</span>
          </h1>
          <p class="text-xl text-gray-400 max-w-2xl mx-auto">
            Whether you have a question about our programs, want to volunteer, or just want to say hello, we're here to listen.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
          <!-- Contact Info -->
          <div class="lg:col-span-1 space-y-8">
            <div class="p-6 bg-white/5 backdrop-blur-lg border border-white/10 rounded-2xl">
              <h3 class="text-xl font-semibold text-white mb-4">Contact Information</h3>
              <div class="space-y-4">
                <div class="flex items-start gap-4">
                  <div class="p-3 bg-primary/10 rounded-lg text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-gray-400">Email</p>
                    <a href="mailto:contact@koshishfamily.org" class="text-white hover:text-primary transition-colors">{details.email}</a>
                  </div>
                </div>
                
                <div class="flex items-start gap-4">
                  <div class="p-3 bg-primary/10 rounded-lg text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-gray-400">Location</p>
                    <p class="text-white">{details.location}</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="p-6 bg-white/5 backdrop-blur-lg border border-white/10 rounded-2xl">
              <h3 class="text-xl font-semibold text-white mb-4">Follow Us</h3>
              <div class="flex gap-4">
                <a href={ExternalLinks.socials.instagram} target="_blank" rel="noopener noreferrer" class="p-3 bg-white/5 rounded-lg text-gray-400 hover:text-white hover:bg-primary transition-all" aria-label="Instagram">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772 4.902 4.902 0 011.772-1.153c.636-.247 1.363-.416 2.427-.465 1.067-.047 1.409-.06 3.809-.06zm1.493 5.493a6.596 6.596 0 100 13.192 6.596 6.596 0 000-13.192zM12.5 7.25a5.25 5.25 0 110 10.5 5.25 5.25 0 010-10.5zm-3.707 8.809a1 1 0 101.414 1.414 1 1 0 00-1.414-1.414z" clip-rule="evenodd" />
                  </svg>
                </a>
                <a href={ExternalLinks.socials.facebook} target="_blank" rel="noopener noreferrer" class="p-3 bg-white/5 rounded-lg text-gray-400 hover:text-white hover:bg-primary transition-all" aria-label="Facebook">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                  </svg>
                </a>
                <a href={ExternalLinks.socials.youtube} target="_blank" rel="noopener noreferrer" class="p-3 bg-white/5 rounded-lg text-gray-400 hover:text-white hover:bg-primary transition-all" aria-label="YouTube">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                  </svg>
                </a>
                <a href={ExternalLinks.socials.linkedin} target="_blank" rel="noopener noreferrer" class="p-3 bg-white/5 rounded-lg text-gray-400 hover:text-white hover:bg-primary transition-all" aria-label="LinkedIn">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M21 21H17V14.25C17 13.19 15.81 12.31 14.75 12.31C13.69 12.31 13 13.19 13 14.25V21H9V9H13V11C13.66 9.93 15.36 9.24 16.5 9.24C19 9.24 21 11.28 21 13.75V21M7 21H3V9H7V21M5 3A2 2 0 0 1 7 5A2 2 0 0 1 5 7A2 2 0 0 1 3 5A2 2 0 0 1 5 3" />
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="lg:col-span-2">
            <ContactForm client:load />
          </div>
        </div>
      </div>
    </main>

		<Footer />
	</body>
</html>
