---
interface Props {
  title: string;
  subtitle: string;
  backgroundImage: string;
  buttonText?: string;
  buttonLink?: string;
  buttonOnClick?: string;
  titleColor?: string;
}

const { title, subtitle, backgroundImage, buttonText, buttonLink, buttonOnClick, titleColor = 'text-white' } = Astro.props;
---

<div class="relative text-white py-24 px-4 mb-12 overflow-hidden">
  <!-- Background Image -->
  <div 
    class="absolute inset-0 bg-cover bg-center"
    style={`background-image: url('${backgroundImage}');`}
  ></div>
  
  <!-- Overlay -->
  <div class="absolute inset-0 bg-black/70 z-[1]"></div>
  
  <!-- Content -->
  <div class="container mx-auto text-center relative z-10">
    <h1 class={`text-5xl font-bold mb-6 font-jost animate-fade-in ${titleColor}`}>{title}</h1>
    <p class="text-2xl mb-8 animate-fade-in-delay-1">
      {subtitle}
    </p>
    {buttonText && (
      buttonLink ? (
        <a
          href={buttonLink}
          class="hero-button inline-block bg-white text-primary px-8 py-3 rounded-full font-semibold hover:bg-opacity-90 transition-all duration-300 animate-fade-in-delay-2"
        >
          {buttonText}
        </a>
      ) : (
        <button
          class="hero-button bg-white text-primary px-8 py-3 rounded-full font-semibold hover:bg-opacity-90 transition-all duration-300 animate-fade-in-delay-2"
          onclick={buttonOnClick}
        >
          {buttonText}
        </button>
      )
    )}
  </div>
</div>

<style>
  .hero-button {
    position: relative;
    overflow: hidden;
  }
  
  .hero-button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 300%;
    height: 300%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 60%);
    transform: translate(-50%, -50%) scale(0);
    transition: transform 0.6s ease-out;
  }
  
  .hero-button:hover::before {
    transform: translate(-50%, -50%) scale(1);
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-in forwards;
  }

  .animate-fade-in-delay-1 {
    opacity: 0;
    animation: fadeIn 1s ease-in 0.3s forwards;
  }

  .animate-fade-in-delay-2 {
    opacity: 0;
    animation: fadeIn 1s ease-in 0.6s forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
