---
interface Props {
  title: string;
  date: string;
  description: string;
  image: string;
  new?: boolean;
}

const { title, date, description, image, new: isNew } = Astro.props;
---

<div class="group h-full">
  <div
    class={`card h-full flex flex-col hover:shadow-xl transition-all duration-300 ${isNew ? "bg-[var(--color-primary)]/5" : "bg-white"}`}
  >
    <!-- Image -->
    <div class="relative h-48 overflow-hidden">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
        onerror="this.src='https://placehold.co/600x400?text=Event'"
      />
      {
        isNew ? (
          <div class="absolute top-4 right-4 bg-[var(--color-primary)] text-white px-3 py-1 rounded-lg text-xs font-bold uppercase tracking-wide shadow-sm">
            Soon
          </div>
        ) : (
          <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-lg text-xs font-bold uppercase tracking-wide text-[var(--color-primary)] shadow-sm">
            {date}
          </div>
        )
      }
    </div>

    <!-- Content -->
    <div class="p-6 flex-1 flex flex-col">
      <h3
        class="heading-sm text-xl mb-3 group-hover:text-[var(--color-primary)] transition-colors line-clamp-2"
      >
        {title}
      </h3>
      <p class="text-body text-sm text-gray-600 mb-4 line-clamp-3 flex-1">
        {description}
      </p>

      <!-- <div class="mt-auto pt-4 border-t border-gray-100">
        <span class="text-[var(--color-primary)] text-sm font-semibold group-hover:underline">Read More &rarr;</span>
      </div> -->
    </div>
  </div>
</div>
