---
interface Props {
  title: string;
  date: string;
  image: string;
}

const { title, date, image } = Astro.props;
---

<div class="col">
  <div class="portfolio-box bg-white rounded-2xl shadow-lg overflow-hidden scale-hover group">
    <div class="relative overflow-hidden">
      <img 
        src={image} 
        alt={title}
        title={title}
        class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
      />
      <!-- Gradient overlay on hover -->
      <div class="absolute inset-0 gradient-overlay opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
        <div class="text-white text-center p-4">
          <svg class="w-16 h-16 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          <p class="text-sm font-semibold">View Event</p>
        </div>
      </div>
    </div>
    <div class="portfolio-info p-6">
      <div class="caption">
        <h4 class="font-bold text-xl mb-2 font-jost gradient-text">{title}</h4>
        <div class="flex items-center text-grey-600">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <p class="text-base">{date}</p>
        </div>
      </div>
    </div>
  </div>
</div>
