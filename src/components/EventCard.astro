---
interface Props {
  title: string;
  date: string;
  description: string;
  image: string;
}

const { title, date, description, image } = Astro.props;
---

<div class="group h-full">
  <div class="card h-full flex flex-col hover:shadow-xl transition-all duration-300">
    <!-- Image -->
    <div class="relative h-48 overflow-hidden">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
        onerror="this.src='https://placehold.co/600x400?text=Event'"
      />
      <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-lg text-xs font-bold uppercase tracking-wide text-blue-600 shadow-sm">
        {date}
      </div>
    </div>
    
    <!-- Content -->
    <div class="p-6 flex-1 flex flex-col">
      <h3 class="heading-sm text-xl mb-3 group-hover:text-blue-600 transition-colors line-clamp-2">
        {title}
      </h3>
      <p class="text-body text-sm text-gray-600 mb-4 line-clamp-3 flex-1">
        {description}
      </p>
      
      <!-- <div class="mt-auto pt-4 border-t border-gray-100">
        <span class="text-blue-600 text-sm font-semibold group-hover:underline">Read More &rarr;</span>
      </div> -->
    </div>
  </div>
</div>
