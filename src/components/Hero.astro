---
import { hero } from '../data/homeData';
---

<section id="home" class="relative min-h-[90vh] flex items-center overflow-hidden bg-gradient-subtle">
  <!-- Background Elements -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0">
    <div class="blob bg-blue-200 w-96 h-96 top-0 left-0 mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
    <div class="blob bg-purple-200 w-96 h-96 top-0 right-0 mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
    <div class="blob bg-pink-200 w-96 h-96 -bottom-8 left-20 mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-4000"></div>
  </div>

  <div class="container relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-20">
      <!-- Hero Content -->
      <div class="flex-1 text-center lg:text-left animate-fade-in">
        <div class="inline-block px-4 py-2 mb-6 rounded-full bg-blue-50 border border-blue-100 text-blue-600 font-medium text-sm tracking-wide uppercase">
          Empowering Future Generations
        </div>
        
        <h1 class="heading-xl mb-6 text-gray-900 leading-tight">
          {hero.title}
        </h1>
        
        <p class="text-body-lg mb-8 max-w-2xl mx-auto lg:mx-0 text-gray-600">
          {hero.description}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a 
            href={hero.buttonLink}
            target="_blank" 
            class="btn btn-primary"
          >
            {hero.buttonText}
          </a>
          <a 
            href="#services"
            class="btn btn-outline"
          >
            Learn More
          </a>
        </div>

        <!-- Stats / Trust Indicators (Optional addition for credibility) -->
        <div class="mt-12 flex items-center justify-center lg:justify-start gap-8 text-gray-500 text-sm font-medium">
          <div class="flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-green-500"></span>
            <span>Verified NGO</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-blue-500"></span>
            <span>100+ Lives Impacted</span>
          </div>
        </div>
      </div>

      <!-- Hero Image / Visual -->
      <div class="flex-1 w-full max-w-lg lg:max-w-xl relative animate-slide-up animation-delay-2000">
        <div class="relative">
          <!-- Main Image Container -->
          <div class="relative rounded-2xl overflow-hidden shadow-2xl border-4 border-white transform rotate-2 hover:rotate-0 transition-transform duration-500">
            <img 
              src="/images/hero-image.jpg" 
              alt="Koshish Family Children" 
              class="w-full h-auto object-cover"
              onerror="this.src='https://placehold.co/600x400?text=Koshish+Family'"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
          </div>
          
          <!-- Floating Badge -->
          <div class="absolute -bottom-6 -left-6 bg-white p-4 rounded-xl shadow-xl animate-float border border-gray-100 hidden md:block">
            <div class="flex items-center gap-3">
              <div class="bg-yellow-100 p-2 rounded-full text-yellow-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <p class="text-xs text-gray-500 font-semibold uppercase">Join Us</p>
                <p class="text-sm font-bold text-gray-900">Make a Difference</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
