---
import { hero } from '../data/homeData';
---

<section id="home" class="section-spacing-lg bg-white">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <!-- Hero Content -->
        <div class="text-center fade-in-simple">
          <h1 class="section-title" style="font-size: 4.5rem; margin-bottom: 2rem;">
            {hero.title}
          </h1>
          <p class="section-subtitle" style="font-size: 1.5rem; max-width: 800px; margin: 0 auto 1.5rem;">
            {hero.subtitle}
          </p>
          <p class="text-grey-500 text-lg mb-12" style="max-width: 700px; margin: 0 auto 3rem;">
            {hero.description}
          </p>
          <a 
            href={hero.buttonLink}
            target="_blank" 
            class="btn-minimal"
          >
            {hero.buttonText}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Animate hero on page load
  document.addEventListener('DOMContentLoaded', () => {
    const heroElement = document.querySelector('#home .fade-in-simple');
    
    setTimeout(() => {
      if (heroElement) {
        heroElement.classList.add('visible');
      }
    }, 100);
  });
</script>
