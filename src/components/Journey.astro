---

<section class="py-16 bg-white overflow-hidden">
  <div class="max-w-screen-xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold font-jost text-black">Our Journey</h2>
      <div class="w-20 h-1 bg-primary mx-auto mt-4 rounded-full"></div>
    </div>

    <div class="relative">
      <!-- Vertical Line -->
      <div class="absolute left-4 md:left-1/2 top-0 bottom-0 w-0.5 bg-grey-200 transform md:-translate-x-1/2"></div>

      <div class="space-y-12">
        {timeline.map((item, index) => (
          <div class={`relative flex flex-col md:flex-row items-center ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
            
            <!-- Content -->
            <div class="w-full md:w-1/2 pl-12 md:pl-0 md:px-12 mb-4 md:mb-0">
              <div class={`bg-white p-6 rounded-xl border border-grey-200 shadow-sm hover:shadow-md transition-all ${index % 2 === 0 ? 'md:text-left' : 'md:text-right'}`}>
                
                <!-- Image -->
                <div class={`mb-4 overflow-hidden rounded-lg h-48 w-full`}>
                    <img 
                        src={item.image} 
                        alt={item.title}
                        class="w-full h-full object-cover transform hover:scale-105 transition-transform duration-500"
                    />
                </div>

                <span class="inline-block px-3 py-1 bg-secondary-light text-secondary text-sm font-bold rounded-full mb-2">
                  {item.year}
                </span>
                <h3 class="text-xl font-bold font-jost text-black mb-2">{item.title}</h3>
                <p class="text-grey-600 text-sm leading-relaxed">
                  {item.description}
                </p>
              </div>
            </div>

            <!-- Dot -->
            <div class="absolute left-4 md:left-1/2 w-4 h-4 bg-primary rounded-full border-4 border-white shadow-sm transform -translate-x-1/2 z-10"></div>
            
            <!-- Empty Space for the other side -->
            <div class="w-full md:w-1/2"></div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
